script/source = "extends KinematicBody2D

const WALK_SPEED = 5

var fire_explosion = preload(\"res://Objects/fire_explosion.tscn\").instance()

var life = 100
var velocity = Vector2()
var is_attacking = false
var color = Color.red
var damage = 2

var target

func _ready():
	$AttackTimer.paused = false
	$AttackTimer.start()
	target = get_nearest_node_in_group(\"player\")

func _process(delta):
	pass

	# UI
	$HealthBar.value = life
	
	if life <= 0:
		return
	elif is_attacking:
		$AnimatedSprite.animation = \"attacking\"
	elif velocity == Vector2.ZERO:
		$AnimatedSprite.animation = \"idle\"
	else:
		$AnimatedSprite.animation = \"running\"

	if velocity.x > 0:
		$AnimatedSprite.flip_h = false
	elif velocity.x < 0:
		$AnimatedSprite.flip_h = true

func _physics_process(delta):
	if is_attacking or life <= 0 or !is_instance_valid(target):
		return
	if target.get_global_transform().get_origin().x + WALK_SPEED < self.get_global_transform().get_origin().x:
		velocity.x = -WALK_SPEED
	elif target.get_global_transform().get_origin().x - WALK_SPEED > self.get_global_transform().get_origin().x:
		velocity.x =  WALK_SPEED
	else:
		velocity.x = 0
		
	if target.get_global_transform().get_origin().y - WALK_SPEED > get_global_transform().get_origin().y:
		velocity.y = WALK_SPEED
	elif target.get_global_transform().get_origin().y + WALK_SPEED < get_global_transform().get_origin().y:
		velocity.y =  -WALK_SPEED
	else:
		velocity.y = 0
	
	move_and_collide(velocity)

func hit(damage):
	life = max(0, life - damage)
	if life <= 0:
		$AnimatedSprite.animation = \"dead\"
		die()
		return true

func die():
	fire_explosion.position = self.position
	get_parent().add_child(fire_explosion)
	queue_free()

func get_nearest_node_in_group(group_name):
	var nodes = get_tree().get_nodes_in_group(group_name)
	if nodes.size() == 0:
		return null
		
	var nearest_node

	# look through spawn nodes to see if any are closer
	for node in nodes:
		if node.life < 0:
			continue
		if nearest_node == null:
			nearest_node = node
		if node.global_position.distance_to(global_position) < nearest_node.global_position.distance_to(global_position):
			nearest_node = node
	return nearest_node

func _on_Area2D_body_entered(body):
	if body.is_in_group(\"player\"):
		target = null
		is_attacking = true

func _on_AttackTimer_timeout():
	var bodies = $Area2D.get_overlapping_bodies()
	var hit_enemy = false
	for body in bodies:
			if body.is_in_group(\"player\"):
				body.hit(damage)
				hit_enemy = true
				target = null
				is_attacking = true
	if !hit_enemy:
		target = get_nearest_node_in_group(\"player\")
		is_attacking = false
		$AnimatedSprite.animation = \"idle\"
"

