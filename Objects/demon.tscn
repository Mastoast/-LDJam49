script/source = "extends KinematicBody2D

const WALK_SPEED = 5

var life = 100
var velocity = Vector2()
var is_attacking = false
var color = Color.red

var target = Vector2()

func _ready():
	pass

func _process(delta):
	pass

	# UI
	$HealthBar.value = life
	
	if life <= 0:
		return
	elif is_attacking:
		$AnimatedSprite.animation = \"attacking\"
	elif velocity == Vector2.ZERO:
		$AnimatedSprite.animation = \"idle\"
	else:
		$AnimatedSprite.animation = \"running\"

	if velocity.x > 0:
		$AnimatedSprite.flip_h = false
	elif velocity.x < 0:
		$AnimatedSprite.flip_h = true

func _physics_process(delta):
	if is_attacking or life <= 0 or target == Vector2.ZERO:
		return
	if target.x < self.get_global_transform().get_origin().x:
		velocity.x = -WALK_SPEED
	elif target.x > self.get_global_transform().get_origin().x:
		velocity.x =  WALK_SPEED
	else:
		velocity.x = 0
		
	if target.y > get_global_transform().get_origin().y:
		velocity.y = WALK_SPEED
	elif target.y < get_global_transform().get_origin().y:
		velocity.y =  -WALK_SPEED
	else:
		velocity.y = 0
	
	move_and_collide(velocity)

func hit(damage):
	life = max(0, life - damage)
	if life <= 0:
		$AnimatedSprite.animation = \"dead\"
		die()

func die():
	get_parent().add_child($AnimatedSprite)
	queue_free()


func _on_Area2D_body_entered(body):
	if body.is_in_group(\"player\"):
		is_attacking = true


func _on_Area2D_body_exited(body):
	if body.is_in_group(\"player\"):
		var bodies = $Area2D.get_overlapping_bodies()
		for body in bodies:
			if body.is_in_group(\"player\"):
				return
		is_attacking = false
"

